<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Default Suite" verbose="1" thread-count="2" parallel="tests">

    <test name="Chrome" thread-count="8" parallel="methods">
        <parameter name="browser" value="CHROME"/>
        <packages>
            <package name="org.selenium.pom.tests"/>
        </packages>
    </test>

    <test name="Firefox" thread-count="8" parallel="methods">
        <parameter name="browser" value="FIREFOX"/>
        <packages>
            <package name="org.selenium.pom.tests"/>
        </packages>
    </test>
</suite>
